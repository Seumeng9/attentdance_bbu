<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:elevation="4dp"
    android:background="@drawable/rounded_corner"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:text="Class Title"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"
            android:lines="2"
            android:ellipsize="end"
            android:breakStrategy="simple" ></TextView>

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_bg_grey"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:text="LAB: 907"
            android:textSize="12sp"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Class Date"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="#808080"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/scanQRIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/scn_qr" />
    </LinearLayout>

</LinearLayout>
