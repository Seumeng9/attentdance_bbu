<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.attendance.CalendarFragment">

    <!-- Material Calendar View -->
    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/materialCalendarView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:mcv_showOtherDates="all"
        app:mcv_headerTextAppearance="@style/CustomWeekDayTextAppearance"
        app:mcv_dateTextAppearance="@style/CustomDateTextAppearance"
        app:mcv_weekDayTextAppearance="@style/CustomWeekDayTextAppearance"
        app:mcv_selectionColor="@color/material_dynamic_neutral50"
        tools:ignore="MissingConstraints" />

    <!-- Vertical Legend (Present, Late, Absent) -->
    <LinearLayout
        android:id="@+id/legendVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/materialCalendarView"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Present -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@color/green"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Present"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <!-- Space -->
            <View
                android:layout_width="80dp"
                android:layout_height="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Days"
                android:textSize="16sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Late -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@color/yellow"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Late"
                android:textSize="16sp"
                android:textColor="@android:color/black" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Days"
                android:textSize="16sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Absent -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@color/red"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Absent"
                android:textSize="16sp"
                android:textColor="@android:color/black" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Days"
                android:textSize="16sp"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

    <!-- Space between legendVertical and Today Section -->
    <View
        android:layout_width="16dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@id/legendVertical"
        app:layout_constraintStart_toEndOf="@id/legendVertical" />

    <!-- Today Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@id/legendVertical"
        app:layout_constraintStart_toEndOf="@id/legendVertical">

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/material_dynamic_neutral50"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textSize="16sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
